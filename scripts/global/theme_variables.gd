extends Node
class_name ThemeVariables

#region text colors...

# The color used for the scroll that the scripture text is displayed on.
static var scroll_background_color: Color = Color.html("#C2B280")  # Darker, desaturated parchment color

# The color used for the translation text in the Bible.
static var translation_text_color: Color = Color.html("#5A3E2B")  # Darker SaddleBrown, primary focus

# The color used for the book name text in the Bible.
static var book_text_color: Color = Color.html("#704214")  # Darker Sienna, secondary focus

# The color used for the chapter number text in the Bible.
static var chapter_text_color: Color = Color.html("#8B4513")  # Darker Chocolate, tertiary focus

# The color used for the verse text in the Bible.
static var verse_text_color: Color = Color.html("#5A3E2B")  # Darker SaddleBrown, primary focus

# The color used for colons in scripture references (e.g., Isaiah 1:1).
static var colon_text_color: Color = Color.html("#8B5A2B")  # Darker Peru, least focus

#endregion
